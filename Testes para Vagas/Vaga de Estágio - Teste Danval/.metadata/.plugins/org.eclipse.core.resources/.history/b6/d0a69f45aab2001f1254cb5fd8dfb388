package teste;

public class Main {
	
	public static void main(String[] args) {
		int[] array = {1, 2, 3, 5, 12};
		
		System.out.printf("Menor n√∫mero faltando: %.0f.", MenorNumeroFaltando(array));
		
	}
	
	public static double MenorNumeroFaltando(int[] array)
	{
		int menor = Integer.MAX_VALUE;
		for (int i = array[0]; i <= array[array.length-1]; i++) {
			for (int n : array) {
				if (n == i) {
					break;
				} else {
					if (i < menor) menor = i; 
				}
			}
		}
		return menor;
	}

}
